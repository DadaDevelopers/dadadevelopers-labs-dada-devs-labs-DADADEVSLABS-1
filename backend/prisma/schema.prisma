generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  DONOR
  BENEFICIARY
  PROVIDER
  ADMIN
}

enum KycStatus {
  PENDING
  APPROVED
  REJECTED
}

enum DonationStatus {
  PENDING
  COMPLETED
  FAILED
}

enum CampaignStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

enum InvoiceStatus {
  PENDING
  COMPLETED
  FAILED
}

enum PayoutStatus {
  PENDING
  COMPLETED
  FAILED
}

// Main User
model User {
  id           String    @id @default(uuid())
  firstName    String
  lastName     String?
  email        String    @unique
  passwordHash String
  role         UserRole  @default(DONOR)
  kycStatus    KycStatus @default(PENDING)
  phoneNumber  String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  campaignsSent        Campaign[]           @relation("ProviderCampaigns")
  beneficiaryCampaigns Campaign[]           @relation("BeneficiaryCampaigns")
  donations            Donation[]
  invoices             Invoice[]            @relation("ProviderInvoices")
  payouts              ProviderPayout[]
  auditLogs            AuditLog[]           @relation("ActorLogs")
  verificationTokens   VerificationToken[]
  passwordResetTokens  PasswordResetToken[]
  refreshTokens        RefreshToken[]
}

// Campaign
model Campaign {
  id            String         @id @default(uuid())
  title         String
  description   String?
  beneficiary   User?          @relation("BeneficiaryCampaigns", fields: [beneficiaryId], references: [id])
  beneficiaryId String?
  provider      User?          @relation("ProviderCampaigns", fields: [providerId], references: [id])
  providerId    String?
  targetAmount  Decimal        @db.Decimal(18, 2)
  currency      String
  status        CampaignStatus @default(ACTIVE)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  donations       Donation[]
  invoices        Invoice[]
  providerPayouts ProviderPayout[]
}

// Donation
model Donation {
  id              String         @id @default(uuid())
  donor           User           @relation(fields: [donorId], references: [id])
  donorId         String
  campaign        Campaign?      @relation(fields: [campaignId], references: [id])
  campaignId      String?
  amount          Decimal        @db.Decimal(18, 2)
  currency        String
  paymentMethod   String
  status          DonationStatus @default(PENDING)
  transactionHash String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

// Invoice
model Invoice {
  id             String        @id @default(uuid())
  campaign       Campaign?     @relation(fields: [campaignId], references: [id])
  campaignId     String?
  provider       User?         @relation("ProviderInvoices", fields: [providerId], references: [id])
  providerId     String?
  amount         Decimal       @db.Decimal(18, 2)
  currency       String
  invoiceFileUrl String?
  status         InvoiceStatus @default(PENDING)
  invoiceHash    String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

// Provider Payout
model ProviderPayout {
  id              String       @id @default(uuid())
  provider        User         @relation(fields: [providerId], references: [id])
  providerId      String
  campaign        Campaign?    @relation(fields: [campaignId], references: [id])
  campaignId      String?
  amount          Decimal      @db.Decimal(18, 2)
  currency        String
  payoutMethod    String
  status          PayoutStatus @default(PENDING)
  transactionHash String?
  createdAt       DateTime     @default(now())
  completedAt     DateTime?
}

// Audit Log
model AuditLog {
  id          String   @id @default(uuid())
  actor       User     @relation("ActorLogs", fields: [actorId], references: [id])
  actorId     String
  actionType  String
  entityType  String
  entityId    String?
  description String?
  createdAt   DateTime @default(now())
}

// Verification Token
model VerificationToken {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  token     String   @unique
  used      Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

// Password Reset Token
model PasswordResetToken {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  token     String   @unique
  used      Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

// Refresh Token
model RefreshToken {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  token     String   @unique
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
}
